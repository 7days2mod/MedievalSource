<configs>
  <config name="loot">
    <append xpath="/*">
      <lootplaceholders>
        <placeholder name="lootStoneHelper">
          <block name="stone" prob="80"/>
          <block name="ironOre" prob="12"/>
          <block name="coalOre" prob="2.5"/>
          <block name="potassiumNitrate" prob="2.5"/>
          <block name="leadOre" prob="2.5"/>
          <block name="silverOre" prob="0.5"/>
        </placeholder>
        <placeholder name="lootForestHelper"/>
        <placeholder name="lootWastelandHelper"/>
        <placeholder name="lootDesertHelper"/>
        <placeholder name="lootBurntForestHelper"/>
        <placeholder name="lootPlainsHelper"/>
        <placeholder name="lootHouseHelper"/>
        <placeholder name="lootStreetHelper"/>
        <placeholder name="lootYardHelper"/>
        <placeholder name="lootMPHelper"/>
        <placeholder name="lootToolsAndForgeHelper"/>
        <placeholder name="lootStoreCratesHelper"/>
        <placeholder name="lootWorkstationsHelper"/>
        <placeholder name="lootWorkstationsBustedHelper"/>
        <placeholder name="lootForgeBustedHelper"/>
        <placeholder name="lootWorkbenchBustedHelper"/>
        <placeholder name="lootConstructionSuppliesHelper"/>
      </lootplaceholders>
      <lootprobtemplates>
        <lootprobtemplate name="baseProbTemplate">
          <loot level="0,0.25" prob="0.25"/>
          <loot level="0.25,0.50" prob="0.5"/>
          <loot level="0.50,0.75" prob="0.75"/>
          <loot level="0.75,1" prob="1"/>
        </lootprobtemplate>
      </lootprobtemplates>
      <lootqualitytemplates>
        <lootqualitytemplate name="baseTemplate">
          <qualitytemplate level="0,1" default_quality="1,600">
            <loot quality="301,600" prob="0.15"/>
            <loot quality="201,300" prob="0.25"/>
            <loot quality="101,200" prob="0.45"/>
            <loot quality="1,100" prob="0.85"/>
          </qualitytemplate>
        </lootqualitytemplate>
      </lootqualitytemplates>
      <lootgroup name="empty"/>
      <lootcontainer id="1" count="0,2" size="5,4" sound_open="UseActions/open_cardboard" sound_close="UseActions/close_cardboard" loot_quality_template="baseTemplate">
        <item group="empty"/>
      </lootcontainer>
    </append>
  </config>
</configs>
